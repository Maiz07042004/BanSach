<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BanSachMVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BanSachMVC.styles.css" asp-append-version="true" />
    <style>
        /* Tạo bố cục cho trang */
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f4f6f9;
            padding: 20px;
        }

        /* Thiết kế tiêu đề */
        h2 {
            text-align: center;
            color: #2c3e50;
            margin-bottom: 20px;
        }

        h4 {
            text-align: center;
            color: #95a5a6;
        }

        /* Thiết kế danh sách liên kết */
        ul {
            list-style-type: none; /* Xóa dấu đầu dòng */
            padding: 0;
            display: flex;
            align-items: center;
        }

            ul li {
                margin: 10px 0;
                width: 100%;
                text-align: center;
            }

                ul li a {
                    display: block;
                    background-color: #3498db;
                    color: white !important;
                    text-decoration: none;
                    padding: 15px 20px;
                    border-radius: 5px;
                    font-size: 18px;
                    transition: all 0.3s ease;
                }

                    ul li a:hover {
                        background-color: #2980b9;
                        transform: translateY(-5px);
                    }

                    ul li a:active {
                        background-color: #1c6f9b;
                    }

        /* Thiết kế Footer */
        .footer {
            text-align: center;
            margin-top: 30px;
            color: #7f8c8d;
        }
    </style>
</head>
<body>
    <ul>
        <li><a href="/ThongKe">Thống kê</a></li>
        <li><a href="/QuanLySach">Quản lý sách</a></li>
        <li><a href="/QuanLyDonHang">Quản lý đơn hàng</a></li>
        <li><a href="@Url.Action("Index", "Logout")">Đăng xuất</a></li>
    </ul>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer class="footer" style="margin-top:30px">
            <p>&copy; 2024 Trang Quản Lý</p>
        </footer>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
